# Environment Variables for Sports Arbitrage Bot
# Copy this file to .env and fill in your actual values

# The Odds API Configuration
ODDS_API_KEY=your_api_key_here

# Sportsbook Credentials (NEVER commit actual credentials)
# Pinnacle
PINNACLE_USERNAME=your_pinnacle_username
PINNACLE_PASSWORD=your_pinnacle_password

# Bet365
BET365_USERNAME=your_bet365_username
BET365_PASSWORD=your_bet365_password

# Bodog
BODOG_USERNAME=your_bodog_username
BODOG_PASSWORD=your_bodog_password

# Sports Interaction
SIA_USERNAME=your_sia_username
SIA_PASSWORD=your_sia_password

# Risk Management
MAX_BET_AMOUNT=100
MIN_ARB_PERCENTAGE=0.5
MAX_ARB_PERCENTAGE=15.0

# Execution Settings
AUTO_EXECUTE=false
DRY_RUN=true
